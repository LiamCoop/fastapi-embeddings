# Frontend -> backend API
# Used by Next.js server runtime inside Docker (container-to-container)
API_INTERNAL_URL=http://backend:8080
# Used by browser clients on your host machine
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1

# Frontend server DB access (if needed by server routes)
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Clerk (required if auth-protected routes are used)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_replace_me
CLERK_SECRET_KEY=sk_test_replace_me
CLERK_WEBHOOK_SECRET=whsec_replace_me
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
